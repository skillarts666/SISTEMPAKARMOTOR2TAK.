<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DataKerusakanActivity"
    android:orientation="vertical"
    android:background="@drawable/bgraya"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="KERUSAKAN / MASALAH MOTOR KAWASAKI NINJA 2 TAK"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:id="@+id/k1"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/kerusakan1"
            android:layout_gravity="left"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/k2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/kerusakan2"
            android:layout_marginStart="30dp"
            android:orientation="vertical">


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:id="@+id/k3"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/kerusakan3"
            android:layout_gravity="left"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/k4"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/kerusakan4"
            android:layout_marginStart="30dp"
            android:orientation="vertical">


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:id="@+id/k5"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/kerusakan5"
            android:layout_gravity="left"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/k6"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/kerusakan6"
            android:layout_marginStart="30dp"
            android:orientation="vertical">


        </LinearLayout>


    </LinearLayout>

        <LinearLayout
            android:id="@+id/k7"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/kerusakan7"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:orientation="vertical">


        </LinearLayout>

    </LinearLayout>
</ScrollView>