<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BerandaFragment"
    android:orientation="vertical"
    android:background="@drawable/bgraya">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@drawable/logomotorkawasaki"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="MENU"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:background="@drawable/bg_rounded_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/btn_diagnosa"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:background="@drawable/diagnosamotor"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_data"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:background="@drawable/kerusakanmotor"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:padding="20dp">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/map"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:background="@drawable/alamatmotor"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_kontak"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:background="@drawable/pakarmotor"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:padding="20dp">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>